{
	"name": "df_error_rows_handle",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_generic_csv",
						"type": "DatasetReference"
					},
					"name": "SalesGlobal"
				}
			],
			"sinks": [
				{
					"name": "RecordsError"
				},
				{
					"name": "SaveGoodRecords"
				}
			],
			"transformations": [
				{
					"name": "ErrosRow"
				},
				{
					"name": "GetNameFileError"
				}
			],
			"scriptLines": [
				"source(output(",
				"          SaleDate as string,",
				"          SalesItem as string,",
				"          Country as string,",
				"          Quantity as short",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     wildcardPaths:['error_rows_handle_dataflow/input_files/GlobalSales_MAY_01.csv']) ~> SalesGlobal",
				"SalesGlobal split(isNull(toDate(SaleDate, 'dd-MMM-yyyy')),",
				"     disjoint: false) ~> ErrosRow@(ErrorRows, GoodRows)",
				"ErrosRow@ErrorRows derive(file_name = 'GlobalSales_MAY_01.csv') ~> GetNameFileError",
				"GetNameFileError sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['GlobalSalesBadRecords.csv'],",
				"     truncate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1),",
				"     format: 'delimited',",
				"     fileSystem: 'filesadf',",
				"     folderPath: 'error_rows_handle_dataflow/bad_records',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     preCommands: [],",
				"     postCommands: []) ~> RecordsError",
				"ErrosRow@GoodRows sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['GlobalSalesProcess.csv'],",
				"     truncate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1),",
				"     format: 'delimited',",
				"     fileSystem: 'filesadf',",
				"     folderPath: 'error_rows_handle_dataflow/good_records',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     preCommands: [],",
				"     postCommands: []) ~> SaveGoodRecords"
			]
		}
	}
}